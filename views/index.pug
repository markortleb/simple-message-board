html
    head
        title #{title}
        link(rel="stylesheet" href="/css/meyerweb_reset.css")
        link(rel="stylesheet" href="/css/style.css")
    body
        h1 Simple Message Board
        ul(class="messages")
            each val, key in messages
                li
                    span #{val.text}
                    span #{val.user}
                    span #{val.added}
        div(class="custom-button")
            a(href="/new") Create Message

